<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:id="@+id/mystery0_text_preference_view_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/mystery0_text_preference_margin"
        android:textSize="@dimen/mystery0_text_preference_text_size"/>

    <TextView
        android:id="@+id/mystery0_text_preference_view_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/mystery0_text_preference_margin"
        android:layout_marginRight="@dimen/mystery0_text_preference_margin"
        android:textSize="@dimen/mystery0_text_preference_source_size"/>

</LinearLayout>
